<?xml version="1.0"?>
<config>
   <tabs>
		<priceupdater  translate="label" module="price">
				<label>Paarth Price Updater</label>
				<sort_order>100</sort_order>
		</priceupdater>
    </tabs>
	<sections>
			<priceupdater_configuration translate="label" module="price">
			<label>Configuration</label>
			<tab>priceupdater</tab>
			<class>separator-top</class>
			<sort_order>10</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			<groups>
			<priceupdater_group translate="label" module="price">
    				 <label>Configuration Group</label>
	     			 <frontend_type>text</frontend_type>
                    <sort_order>100</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
			<fields>
                <priceupdater_enable translate="label comment">
                            <label>Enable/Disable</label>
                            <comment>Select Yes for enable or No for disable the extension.</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>6</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                </priceupdater_enable>
				
				
				 <ipaddress translate="label comment">
                            <label>Enter the IP Address</label>
                            <comment>Catalog Price Change only for this IP Address.</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>7</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                </ipaddress>
				
				
					
			</fields>
			
		</priceupdater_group>     
	 	 </groups>
		</priceupdater_configuration>
</sections>


</config>